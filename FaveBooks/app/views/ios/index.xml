<Alloy>
    <Collection src="books"/>
    <NavigationWindow>
        <Window class="container" title="My Books">
            <!-- Add TableView and  TableViewRow -->
            <TableView dataCollection="books">
                <TableViewRow title="{name}" author="{author}" isbn="{isbn}" pages="{pages}" annotation="{annotation}" onClick="showBook"></TableViewRow>
            </TableView>
        </Window>
    </NavigationWindow>
</Alloy>
